@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileRestaurantService ProductService
@model ContosoCrafts.WebSite.Pages.Product.RestaurantModel

@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurant</h1>

<div class="container">
    <h5 class="title" id="productTitle">@Model.Product.Title</h5>

    <img class="card-img" src='@Model.Product.Image' alt='Image for @Model.Product.Title'>

    <p class="card-text">@Model.Product.Description</p>

</div>

<br/>
<br/>
    

<div class="row">
    <a asp-page="Update" asp-route-id="@Model.Product.Id" class="btn btn-primary">Update</a>&nbsp; &nbsp;
    <a asp-page="Delete" asp-route-id="@Model.Product.Id" class="btn btn-primary">Delete</a>
</div>